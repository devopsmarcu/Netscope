<Window x:Class="NetScope.WakeOnLanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wake-on-LAN - NetScope" 
        Height="360" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>
        
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="StartButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="⚡" Margin="0,0,8,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#28A745" Padding="20,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⚡" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                <TextBlock Text="Wake-on-LAN" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Border Grid.Row="1" Padding="25">
            <StackPanel>
                <TextBlock Text="Hostname:" Style="{StaticResource LabelStyle}"/>
                <TextBlock x:Name="lblHostname" Text="-" Style="{StaticResource ValueStyle}"/>

                <TextBlock Text="IP Address:" Style="{StaticResource LabelStyle}"/>
                <TextBlock x:Name="lblIpAddress" Text="0.0.0.0" Style="{StaticResource ValueStyle}"/>

                <TextBlock Text="MAC Address:" Style="{StaticResource LabelStyle}"/>
                <TextBlock x:Name="lblMacAddress" Text="00-00-00-00-00-00" Style="{StaticResource ValueStyle}"/>
                
                <TextBlock Text="O pacote 'Magic Packet' será enviado via broadcast para tentar ligar o computador remotamente." 
                           FontSize="11" Foreground="#888888" TextWrapping="Wrap" Margin="0,5,0,0" FontStyle="Italic"/>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#EEEEEE" Padding="20">
            <Grid>
                <Button x:Name="btnCancel" Content="Fechar" HorizontalAlignment="Left" 
                        Click="BtnCancel_Click" Background="Transparent" BorderThickness="0" Foreground="#666666" Cursor="Hand"/>
                
                <Button x:Name="btnWake" Content="LIGAR COMPUTADOR" HorizontalAlignment="Right" 
                        Style="{StaticResource StartButtonStyle}"
                        Click="BtnWake_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
