<Window x:Class="NetScope.Views.WakeOnLanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wake-on-LAN" 
        Height="320" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style x:Key="LabelHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>
        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="25,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="âš¡ Wake-on-LAN" FontSize="18" FontWeight="Bold" Foreground="#0078D4" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Computer Name:" Style="{StaticResource LabelHeader}"/>
            <TextBlock x:Name="lblHost" Text="-" Style="{StaticResource ValueText}"/>
            
            <TextBlock Text="IP Address:" Style="{StaticResource LabelHeader}"/>
            <TextBlock x:Name="lblIp" Text="-" Style="{StaticResource ValueText}"/>
            
            <TextBlock Text="MAC Address:" Style="{StaticResource LabelHeader}"/>
            <TextBlock x:Name="lblMac" Text="-" Style="{StaticResource ValueText}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCancel" Content="Cancel" Style="{StaticResource PrimaryButtonStyle}" Background="#E1E1E1" Foreground="#333333" Margin="0,0,10,0" Click="BtnCancel_Click"/>
            <Button x:Name="btnSend" Content="Send Magic Packet" Style="{StaticResource PrimaryButtonStyle}" Click="BtnSend_Click"/>
        </StackPanel>
    </Grid>
</Window>
