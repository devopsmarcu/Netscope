<Window x:Class="NetScope.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:NetScope.ViewModels"
        Title="NetScope - DHCP Management" 
        Height="700" Width="900"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="30,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Wait"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
            <MenuItem Header="{DynamicResource MenuFile}">
                <MenuItem Header="{DynamicResource MenuSettings}" Click="MenuSettings_Click">
                    <MenuItem.Icon><TextBlock Text="âš™ï¸" FontSize="14"/></MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="{DynamicResource MenuExit}" Click="MenuExit_Click">
                    <MenuItem.Icon><TextBlock Text="âŒ" FontSize="14"/></MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="{DynamicResource MenuHelp}">
                <MenuItem Header="{DynamicResource MenuAbout}" Click="MenuAbout_Click">
                    <MenuItem.Icon><TextBlock Text="â„¹ï¸" FontSize="14"/></MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        
        <Grid Margin="25" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#0078D4" CornerRadius="8" Padding="20,15" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="32" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{DynamicResource AppTitle}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="{DynamicResource AppSubtitle}" FontSize="12" Foreground="#E0E0E0" Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1" Background="White" CornerRadius="8" BorderBrush="#DDDDDD" BorderThickness="1" Padding="20" Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource SearchType}" Style="{StaticResource LabelStyle}"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" Height="35" SelectedValuePath="Tag"
                              SelectedValue="{Binding SearchType, Mode=TwoWay}">
                        <ComboBoxItem Content="{DynamicResource SearchTypeMac}" Tag="MAC"/>
                        <ComboBoxItem Content="{DynamicResource SearchTypeIp}" Tag="IP"/>
                        <ComboBoxItem Content="{DynamicResource SearchTypeHostname}" Tag="Hostname"/>
                        <ComboBoxItem Content="{DynamicResource SearchTypeDescription}" Tag="Description"/>
                    </ComboBox>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource SearchValue}" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Height="35" Style="{StaticResource InputTextBoxStyle}"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="{DynamicResource SearchTooltip}" KeyDown="TxtSearch_KeyDown"/>
                </Grid>
            </Border>

            <Border Grid.Row="2" Background="#FFF9E6" CornerRadius="6" BorderBrush="#FFE4A0" BorderThickness="1" Padding="15,10" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="#856404" Margin="0,0,0,5" Text="{DynamicResource SearchExamplesTitle}"/>
                    <TextBlock FontSize="11" Foreground="#856404" TextWrapping="Wrap">
                        <Run Text="â€¢ "/><Run Text="{DynamicResource SearchExampleMac}"/><LineBreak/>
                        <Run Text="â€¢ "/><Run Text="{DynamicResource SearchExampleIp}"/><LineBreak/>
                        <Run Text="â€¢ "/><Run Text="{DynamicResource SearchExampleHostname}"/><LineBreak/>
                        <Run Text="â€¢ "/><Run Text="{DynamicResource SearchExampleDescription}"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,20">
                <Button Content="{DynamicResource BtnSearch}" Height="45" MinWidth="120"
                        Style="{StaticResource PrimaryButtonStyle}" Command="{Binding SearchCommand}"/>
                
                <Button Content="{DynamicResource BtnStartWOL}" Height="45" MinWidth="120" Margin="10,0,0,0"
                        Style="{StaticResource PrimaryButtonStyle}" Click="BtnWakeOnLan_Click"
                        Visibility="{Binding CanWakeOnLan, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}"/>
            </StackPanel>

            <Border Grid.Row="4" Background="White" CornerRadius="8" BorderBrush="#DDDDDD" BorderThickness="1" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="{DynamicResource ResultsTitle}" FontSize="14" FontWeight="SemiBold" Foreground="#333333" Margin="0,0,0,10"/>
                    <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Background="#FAFAFA">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <TextBox Text="{Binding Results}" FontFamily="Consolas" FontSize="12" TextWrapping="Wrap" BorderThickness="0" IsReadOnly="True" Background="Transparent" Foreground="#333333" Padding="10" VerticalAlignment="Stretch"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Row="5" Background="#F8F9FA" CornerRadius="6" Padding="12,8" Margin="0,15,0,0" BorderBrush="#DEE2E6" BorderThickness="1">
                <Grid>
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="10" Foreground="#6C757D">
                        <Run Text="NetScope Management"/>
                        <Run Text=" | "/>
                        <Run Text="VersÃ£o 2.2"/>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="10" Foreground="#6C757D" Text="{Binding ServerCountText}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>