<Window x:Class="NetScope.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NetScope - DHCP Management" 
        Height="700" Width="900"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <!-- Estilo para Labels -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        
        <!-- Estilo para ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- Estilo para TextBox de Input -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- Estilo para BotÃ£o Principal -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="30,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Wait"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- MenuBar -->
        <Menu Grid.Row="0" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
            <MenuItem Header="Arquivo">
                <MenuItem Header="ConfiguraÃ§Ãµes..." Click="MenuSettings_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="âš™ï¸" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Sair" Click="MenuExit_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="âŒ" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Ajuda">
                <MenuItem Header="Sobre..." Click="MenuAbout_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="â„¹ï¸" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
        
        <!-- Grid Principal com Margem -->
        <Grid Margin="25" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- CabeÃ§alho -->
            <Border Grid.Row="0" Background="#0078D4" CornerRadius="8" Padding="20,15" 
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="32" 
                               VerticalAlignment="Center" Margin="0,0,15,0"/>
                    
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Consulta de Leases DHCP" 
                                   FontSize="24" FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock Text="Sistema de busca em mÃºltiplos servidores DHCP" 
                                   FontSize="12" 
                                   Foreground="#E0E0E0" 
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Painel de Pesquisa -->
            <Border Grid.Row="1" Background="White" CornerRadius="8" 
                    BorderBrush="#DDDDDD" BorderThickness="1" 
                    Padding="20" Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Tipo de Pesquisa -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="Tipo de Pesquisa:" 
                               Style="{StaticResource LabelStyle}"/>
                    
                    <ComboBox Grid.Row="0" Grid.Column="1" 
                              x:Name="cmbSearchType" 
                              Height="35"
                              SelectionChanged="CmbSearchType_SelectionChanged">
                        <ComboBoxItem Content="ðŸ”– MAC Address" Tag="MAC" IsSelected="True"/>
                        <ComboBoxItem Content="ðŸŒ IP Address" Tag="IP"/>
                        <ComboBoxItem Content="ðŸ’» Host Name" Tag="Hostname"/>
                        <ComboBoxItem Content="ðŸ“ DescriÃ§Ã£o" Tag="Description"/>
                    </ComboBox>

                    <!-- Campo de Busca -->
                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="Valor para busca:" 
                               Style="{StaticResource LabelStyle}"/>
                    
                    <TextBox Grid.Row="2" Grid.Column="1" 
                             x:Name="txtSearch" 
                             Height="35"
                             Style="{StaticResource InputTextBoxStyle}"
                             ToolTip="Pressione Enter para pesquisar"
                             KeyDown="TxtSearch_KeyDown"/>
                </Grid>
            </Border>

            <!-- Exemplos de Uso -->
            <Border Grid.Row="2" Background="#FFF9E6" CornerRadius="6" 
                    BorderBrush="#FFE4A0" BorderThickness="1" 
                    Padding="15,10" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock FontSize="12" FontWeight="SemiBold" 
                               Foreground="#856404" Margin="0,0,0,5">
                        ðŸ’¡ Exemplos de pesquisa:
                    </TextBlock>
                    <TextBlock FontSize="11" Foreground="#856404" TextWrapping="Wrap">
                        <Run Text="â€¢ MAC: "/>
                        <Run Text="00-17-c8-a4-f8-4c" FontFamily="Consolas"/>
                        <Run Text=" | "/>
                        <Run Text="0017c8a4f84c" FontFamily="Consolas"/>
                        <LineBreak/>
                        <Run Text="â€¢ IP: "/>
                        <Run Text="10.50.14.29" FontFamily="Consolas"/>
                        <LineBreak/>
                        <Run Text="â€¢ Hostname: "/>
                        <Run Text="KMA4F84C" FontFamily="Consolas"/>
                        <Run Text=" ou "/>
                        <Run Text="hostname-exemplo" FontFamily="Consolas"/>
                        <Run Text=" (busca parcial)"/>
                        <LineBreak/>
                        <Run Text="â€¢ DescriÃ§Ã£o: qualquer texto da descriÃ§Ã£o (busca parcial)"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- BotÃµes de Pesquisa e WOL -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,20">
                <Button x:Name="btnSearch" 
                        Content="ðŸ” Pesquisar" 
                        Height="45"
                        MinWidth="120"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="BtnSearch_Click"/>
                
                <Button x:Name="btnWakeOnLan" 
                        Content="âš¡ Iniciar" 
                        Height="45"
                        MinWidth="120"
                        Margin="10,0,0,0"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="BtnWakeOnLan_Click"
                        Visibility="Collapsed"
                        ToolTip="Wake-on-LAN - Ligar computador remotamente"/>
            </StackPanel>

            <!-- Resultado -->
            <Border Grid.Row="4" 
                    Background="White" 
                    CornerRadius="8" 
                    BorderBrush="#DDDDDD" 
                    BorderThickness="1" 
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- TÃ­tulo da SeÃ§Ã£o de Resultados -->
                    <TextBlock Grid.Row="0" 
                               Text="ðŸ“‹ Resultados da Pesquisa" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               Foreground="#333333"
                               Margin="0,0,0,10"/>
                    
                    <!-- ScrollViewer com TextBox de Resultado -->
                    <Border Grid.Row="1" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            CornerRadius="4"
                            Background="#FAFAFA">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Auto">
                            <TextBox x:Name="txtResult" 
                                     Text="Aguardando pesquisa..."
                                     FontFamily="Consolas" 
                                     FontSize="12"
                                     TextWrapping="Wrap"
                                     BorderThickness="0"
                                     IsReadOnly="True"
                                     Background="Transparent"
                                     Foreground="#333333"
                                     Padding="10"
                                     VerticalAlignment="Stretch"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>

            <!-- RodapÃ© -->
            <Border Grid.Row="5" 
                    Background="#F8F9FA" 
                    CornerRadius="6" 
                    Padding="12,8" 
                    Margin="0,15,0,0"
                    BorderBrush="#DEE2E6"
                    BorderThickness="1">
                <Grid>
                    <TextBlock HorizontalAlignment="Left" 
                               VerticalAlignment="Center"
                               FontSize="10" 
                               Foreground="#6C757D">
                        <Run Text="Corporate Network"/>
                        <Run Text=" | "/>
                        <Run Text="VersÃ£o 2.0"/>
                    </TextBlock>
                    
                    <TextBlock HorizontalAlignment="Right" 
                               VerticalAlignment="Center"
                               FontSize="10" 
                               Foreground="#6C757D"
                               x:Name="lblServerCount">
                        <Run Text="Servidores monitorados: Carregando..."/>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>