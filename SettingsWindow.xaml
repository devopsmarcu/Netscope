<Window x:Class="NetScope.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configurações - NetScope" 
        Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E1E1E1"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Configurações do Sistema" 
                   FontSize="18" FontWeight="Bold" Foreground="#0078D4" Margin="0,0,0,15"/>

        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0,1,0,0">
            <!-- Servidores DHCP -->
            <TabItem Header="Servidores DHCP">
                <Grid Margin="0,15,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Novo Servidor (IP ou Hostname):" FontSize="11" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtServerAddress" Height="30" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        <Button x:Name="btnAddServer" Grid.Column="1" Content="Adicionar" 
                                Style="{StaticResource PrimaryButtonStyle}" Margin="10,20,0,0" Height="30"
                                Click="BtnAddServer_Click"/>
                    </Grid>

                    <Border Grid.Row="1" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4">
                        <DataGrid x:Name="dgServers" AutoGenerateColumns="False" CanUserAddRows="False" 
                                  BorderThickness="0" SelectionMode="Single" RowHeaderWidth="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Endereço" Binding="{Binding Address}" Width="*"/>
                                <DataGridCheckBoxColumn Header="Ativo" Binding="{Binding IsActive}" Width="50"/>
                                <DataGridTemplateColumn Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="❌" Background="Transparent" BorderThickness="0" 
                                                    Foreground="Red" Cursor="Hand" Click="BtnDeleteServer_Click" Tag="{Binding}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Políticas de Filtro -->
            <TabItem Header="Políticas de Filtro">
                <Grid Margin="0,15,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Nome da Política (ex: FILTRO DE MACS):" FontSize="11" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtPolicyName" Height="30" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        <Button x:Name="btnAddPolicy" Grid.Column="1" Content="Adicionar" 
                                Style="{StaticResource PrimaryButtonStyle}" Margin="10,20,0,0" Height="30"
                                Click="BtnAddPolicy_Click"/>
                    </Grid>

                    <Border Grid.Row="1" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4">
                        <DataGrid x:Name="dgPolicies" AutoGenerateColumns="False" CanUserAddRows="False" 
                                  BorderThickness="0" SelectionMode="Single" RowHeaderWidth="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Nome da Política" Binding="{Binding Name}" Width="*"/>
                                <DataGridCheckBoxColumn Header="Ativa" Binding="{Binding IsActive}" Width="50"/>
                                <DataGridTemplateColumn Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="❌" Background="Transparent" BorderThickness="0" 
                                                    Foreground="Red" Cursor="Hand" Click="BtnDeletePolicy_Click" Tag="{Binding}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Escopos Fixos -->
            <TabItem Header="Escopos">
                <Grid Margin="0,15,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="100"/>
                            <ColumnDefinition Width="*" MinWidth="100"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="IP do Escopo:" FontSize="11" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtScopeId" Height="30" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="Nome/Unidade:" FontSize="11" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtScopeName" Height="30" VerticalContentAlignment="Center"/>
                        </StackPanel>
                        <Button x:Name="btnAddScope" Grid.Column="2" Content="Adicionar" 
                                Style="{StaticResource PrimaryButtonStyle}" Margin="10,20,0,0" Height="30"
                                Click="BtnAddScope_Click"/>
                    </Grid>

                    <Border Grid.Row="1" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="4">
                        <DataGrid x:Name="dgScopes" AutoGenerateColumns="False" CanUserAddRows="False" 
                                  BorderThickness="0" SelectionMode="Single" RowHeaderWidth="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="IP do Escopo" Binding="{Binding ScopeId}" Width="120"/>
                                <DataGridTextColumn Header="Nome / Unidade" Binding="{Binding Name}" Width="*"/>
                                <DataGridTemplateColumn Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="❌" Background="Transparent" BorderThickness="0" 
                                                    Foreground="Red" Cursor="Hand" Click="BtnDeleteScope_Click" Tag="{Binding}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnCancel" Content="Cancelar" 
                    Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0"
                    Click="BtnCancel_Click"/>
            
            <Button x:Name="btnSave" Content="Salvar Configurações" 
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>

</Window>
